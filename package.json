{
  "name": "interview-project",
  "version": "1.0.0",
  "description": "CLI tool for reading text files",
  "main": "dist/cli.js",
  "scripts": {
    "start": "node dist/cli.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "nodemon --watch src --watch test --ext ts --exec 'npm test'",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": ["cli", "file-reader"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
