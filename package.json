{
  "name": "interview-project",
  "version": "1.0.0",
  "description": "CLI tool for reading text files",
  "main": "dist/cli.js",
  "scripts": {
    "start": "node dist/cli.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts' '*.json' '*.md'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts' '*.json' '*.md'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm test",
    "clean": "rm -rf dist coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "cli",
    "file-reader"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "jiti": "^2.6.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
